{
  "$schema": "vscode://schemas/color-theme",
  "name": "Retrowave Sunset",
  "type": "dark",
  "colors": {
    "editor.background": "#1a0c3a",
    "editor.foreground": "#EEDCFF",
    "editorCursor.foreground": "#ff40c0",
    "editor.lineHighlightBackground": "#2a0b5a66",
    "editor.selectionBackground": "#ff2aa640",
    "editor.selectionForeground": "#ffffff",
    "editor.inactiveSelectionBackground": "#2a0b5a66",
    "editor.selectionHighlightBackground": "#ff40c01f",
    "editor.selectionHighlightBorder": "#ff40c033",
    "editor.findMatchHighlightBackground": "#40ffff33",
    "editor.findMatchBorder": "#40ffff66",
    "editorLineNumber.foreground": "#8f6db9",
    "editorLineNumber.activeForeground": "#ffb9ff",
    "editorIndentGuide.background1": "#2a0b5a",
    "editorIndentGuide.activeBackground1": "#ff2aa6",
    "tab.activeBackground": "#1b0e44",
    "tab.inactiveBackground": "#140936",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveForeground": "#bda0ea",
    "tab.hoverBackground": "#20114d",
    "tab.border": "#2a1b4d",
    "tab.activeBorderTop": "#ff40c0",
    "tab.activeBorder": "#2a1b4d",
    "tab.hoverBorder": "#3a2a66",
    "sideBar.background": "#1b0e44",
    "sideBar.foreground": "#E7D9FF",
    "sideBar.border": "#2a1b4d",
    "sideBarTitle.foreground": "#EEDCFF",
    "sideBarSectionHeader.foreground": "#EEDCFF",
    "sideBarSectionHeader.background": "#1b0e44",
    "sideBarSectionHeader.border": "#2a1b4d",
    "activityBar.background": "#140936",
    "activityBar.foreground": "#f75bb6",
    "activityBar.inactiveForeground": "#BDA0EA",
    "activityBar.activeBorder": "#ff40c0",
    "activityBar.border": "#2a1b4d",
    "activityBarBadge.background": "#ff2aa6",
    "activityBarBadge.foreground": "#ffffff",
    "statusBar.background": "#0c021f",
    "statusBar.noFolderBackground": "#0c021f",
    "statusBar.debuggingBackground": "#ff2aa6",
    "statusBar.foreground": "#EEDCFF",
    "statusBar.border": "#2a1b4d",
    "statusBarItem.hoverBackground": "#1b0e44",
    "statusBarItem.remoteBackground": "#1b0e44",
    "statusBarItem.remoteForeground": "#cbb5ff",
    "textLink.foreground": "#ff80e5",
    "textLink.activeForeground": "#ff40c0",
    "button.background": "#ff2aa6",
    "button.foreground": "#ffffff",
    "button.hoverBackground": "#ff40c0",
    "list.activeSelectionBackground": "#ff2aa620",
    "list.activeSelectionForeground": "#ffffff",
    "list.inactiveSelectionBackground": "#20114d",
    "list.hoverBackground": "#1c0f40",
    "list.highlightForeground": "#ffd1ff",
    "focusBorder": "#ff40c0",
    "input.background": "#291757",
    "input.foreground": "#EEDCFF",
    "input.placeholderForeground": "#a783d3",
    "input.border": "#3a2a66",
    "dropdown.background": "#1c0f40",
    "dropdown.foreground": "#EEDCFF",
    "dropdown.border": "#3a2a66",
    "editorWidget.background": "#1c0f40",
    "editorWidget.border": "#3a2a66",
    "editorSuggestWidget.border": "#3a2a66",
    "peekView.border": "#3a2a66",
    "editorGroup.border": "#2a1b4d",
    "editorGroupHeader.tabsBorder": "#2a1b4d",
    "titleBar.activeBackground": "#0c021f",
    "titleBar.activeForeground": "#EEDCFF",
    "titleBar.inactiveBackground": "#0a0018",
    "titleBar.inactiveForeground": "#9c81cf",
    "titleBar.border": "#2a1b4d",
    "commandCenter.background": "#241458",
    "commandCenter.foreground": "#FFFFFF",
    "commandCenter.border": "#4b3494",
    "commandCenter.activeBackground": "#3e2695",
    "commandCenter.activeForeground": "#ffffff",
    "commandCenter.activeBorder": "#ff80e5",
    "commandCenter.inactiveForeground": "#dcc8ff",
    "commandCenter.inactiveBorder": "#8f79d9",
    "commandCenter.debuggingBackground": "#1b0e4470",
    "menu.background": "#30167c",
    "menu.foreground": "#EEDCFF",
    "menu.selectionBackground": "#1b0e44",
    "menu.selectionForeground": "#ffffff",
    "menu.separatorBackground": "#2a1b4d",
    "menu.border": "#2a1b4d",
    "toolbar.hoverBackground": "#1b0e44",
    "toolbar.activeBackground": "#241357",
    "toolbar.hoverOutline": "#3a2a66",
    "terminal.background": "#100132",
    "terminal.border": "#2a1b4d",
    "terminal.foreground": "#EEDCFF",
    "terminalCursor.foreground": "#ff2aa6",
    "panel.background": "#140936",
    "panel.border": "#2a1b4d",
    "panelSection.border": "#2a1b4d",
    "panelSectionHeader.border": "#2a1b4d",
    "panelTitle.activeForeground": "#FFFFFF",
    "panelTitle.inactiveForeground": "#CDBAF4",
    "panelTitle.activeBorder": "#3A2A66",
    "icon.foreground": "#FFFFFF"
  },
  "tokenColors": [
    /* ---------- Comunes ---------- */
    {
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#802b80",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "string",
        "constant.other.symbol.ruby",
        "string.quoted.other.literal.upper.python"
      ],
      "settings": {
        "foreground": "#ffcc00"
      }
    },
    {
      "scope": [
        "string.regexp",
        "string.regexp punctuation",
        "constant.character.escape",
        "constant.other.character-class.set.regexp"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    {
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier",
        "keyword.operator.new",
        "keyword.operator.expression",
        "keyword.other.unit"
      ],
      "settings": {
        "foreground": "#F910AA",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "constant.numeric",
        "constant.language",
        "constant.boolean",
        "constant.null",
        "constant.nan"
      ],
      "settings": {
        "foreground": "#ff5f5f"
      }
    },
    {
      "scope": [
        "entity.name.function",
        "meta.function entity.name.function",
        "support.function.builtin",
        "support.function.console"
      ],
      "settings": {
        "foreground": "#ff40c0"
      }
    },
    {
      "scope": [
        "variable",
        "identifier",
        "variable.other.readwrite",
        "variable.other.object",
        "variable.other.property"
      ],
      "settings": {
        "foreground": "#ff80e5"
      }
    },
    {
      "scope": [
        "variable.parameter",
        "meta.function.parameters variable.parameter"
      ],
      "settings": {
        "foreground": "#ffd1ff"
      }
    },
    {
      "scope": [
        "type",
        "support.type",
        "support.class",
        "entity.name.type",
        "entity.other.inherited-class"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    {
      "scope": [
        "keyword.operator",
        "punctuation.separator.comma",
        "punctuation.separator.period",
        "punctuation.section.embedded"
      ],
      "settings": {
        "foreground": "#cbb5ff"
      }
    },
    /* ---------- JavaScript / TypeScript ---------- */
    {
      "scope": [
        "variable.other.readwrite.alias.js",
        "variable.other.readwrite.alias.ts",
        "meta.import variable.other.readwrite"
      ],
      "settings": {
        "foreground": "#ff80e5"
      }
    },
    {
      "scope": [
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.from"
      ],
      "settings": {
        "foreground": "#F910AA",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "meta.object-literal.key",
        "support.type.property-name.json",
        "punctuation.separator.key-value"
      ],
      "settings": {
        "foreground": "#EEDCFF"
      }
    },
    {
      "scope": [
        "string.template",
        "punctuation.definition.template-expression.begin",
        "punctuation.definition.template-expression.end"
      ],
      "settings": {
        "foreground": "#ffcc00"
      }
    },
    {
      "scope": [
        "support.type.primitive.ts",
        "support.type.builtin.ts",
        "entity.name.type.interface.ts"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    /* ---------- Python ---------- */
    {
      "scope": [
        "entity.name.function.decorator.python",
        "meta.function.decorator.python",
        "punctuation.definition.decorator.python"
      ],
      "settings": {
        "foreground": "#ff40c0"
      }
    },
    {
      "scope": [
        "variable.language.special.self.python",
        "variable.language.self"
      ],
      "settings": {
        "foreground": "#bda0ea",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "support.function.builtin.python",
        "support.type.python",
        "constant.language.python"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    {
      "scope": [
        "keyword.control.import.python",
        "keyword.control.from.python",
        "keyword.operator.logical.python",
        "keyword.operator.arithmetic.python"
      ],
      "settings": {
        "foreground": "#F910AA",
        "fontStyle": "bold"
      }
    },
    /* ---------- Ruby ---------- */
    {
      "scope": [
        "variable.other.readwrite.instance.ruby",
        "variable.other.readwrite.class.ruby"
      ],
      "settings": {
        "foreground": "#ff80e5"
      }
    },
    {
      "scope": [
        "variable.language.self.ruby"
      ],
      "settings": {
        "foreground": "#bda0ea",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "entity.name.type.class.ruby",
        "entity.name.type.module.ruby",
        "constant.other.ruby",
        "constant.other.symbol.hashkey.ruby"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    {
      "scope": [
        "keyword.control.ruby",
        "keyword.other.special-method.ruby",
        "storage.type.class.ruby",
        "storage.type.module.ruby",
        "keyword.other.def.ruby",
        "keyword.control.end.ruby",
        "keyword.other.require.ruby"
      ],
      "settings": {
        "foreground": "#F910AA",
        "fontStyle": "bold"
      }
    },
    /* ---------- CSS / SCSS ---------- */
    {
      "scope": [
        "source.css meta.property-name",
        "support.type.property-name.css",
        "support.type.vendored.property-name.css"
      ],
      "settings": {
        "foreground": "#EEDCFF"
      }
    },
    {
      "scope": [
        "source.css meta.property-value",
        "support.constant.property-value.css",
        "constant.other.color.rgb-value.css",
        "constant.other.color",
        "keyword.other.unit.css"
      ],
      "settings": {
        "foreground": "#ffcc00"
      }
    },
    {
      "scope": [
        "entity.name.tag.css",
        "entity.name.tag.reference.css"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    {
      "scope": [
        "entity.other.attribute-name.id.css",
        "entity.other.attribute-name.pseudo-class.css",
        "entity.other.attribute-name.pseudo-element.css"
      ],
      "settings": {
        "foreground": "#ff40c0"
      }
    },
    {
      "scope": [
        "entity.other.attribute-name.class.css"
      ],
      "settings": {
        "foreground": "#ff80e5"
      }
    },
    {
      "scope": [
        "support.constant.media.css",
        "keyword.control.at-rule.css",
        "keyword.control.at-rule.media.css"
      ],
      "settings": {
        "foreground": "#F910AA",
        "fontStyle": "bold"
      }
    },
    /* SCSS extras */
    {
      "scope": [
        "variable.scss",
        "variable.other.root.scss",
        "variable.other.scss"
      ],
      "settings": {
        "foreground": "#ff80e5"
      }
    },
    {
      "scope": [
        "support.function.scss",
        "support.function.misc.scss"
      ],
      "settings": {
        "foreground": "#ff40c0"
      }
    },
    {
      "scope": [
        "entity.name.function.scss",
        "meta.function.mixin.scss",
        "support.function.at-rule.mixin.scss"
      ],
      "settings": {
        "foreground": "#ff40c0"
      }
    },
    {
      "scope": [
        "keyword.control.at-rule.scss",
        "keyword.other.default.scss",
        "keyword.other.mixin.scss",
        "keyword.other.function.scss"
      ],
      "settings": {
        "foreground": "#F910AA",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "punctuation.definition.interpolation.begin.scss",
        "punctuation.definition.interpolation.end.scss",
        "meta.interpolation.scss"
      ],
      "settings": {
        "foreground": "#cbb5ff"
      }
    },
    /* ---------- HTML ---------- */
    {
      "scope": [
        "entity.name.tag.html",
        "meta.tag.sgml.doctype.html"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    {
      "scope": [
        "punctuation.definition.tag.begin.html",
        "punctuation.definition.tag.end.html",
        "punctuation.definition.tag"
      ],
      "settings": {
        "foreground": "#cbb5ff"
      }
    },
    {
      "scope": [
        "entity.other.attribute-name.html"
      ],
      "settings": {
        "foreground": "#ff80e5"
      }
    },
    {
      "scope": [
        "string.quoted.double.html",
        "string.quoted.single.html",
        "constant.character.entity.html"
      ],
      "settings": {
        "foreground": "#ffcc00"
      }
    },
    {
      "scope": [
        "meta.tag.inline.any.html",
        "meta.tag.structure.any.html"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    /* ---------- HTML.ERB (Ruby embebido) ---------- */
    {
      "scope": [
        "text.html.ruby",
        "meta.embedded.block.erb",
        "meta.embedded.line.ruby"
      ],
      "settings": {
        "foreground": "#EEDCFF"
      }
    },
    {
      "scope": [
        "punctuation.section.embedded.ruby",
        "source.ruby.embedded.html"
      ],
      "settings": {
        "foreground": "#F910AA",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "entity.name.tag",
        "entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#40ffff"
      }
    },
    {
      "scope": [
        "string.quoted.double",
        "string.quoted.single"
      ],
      "settings": {
        "foreground": "#ffcc00"
      }
    },
    {
      "scope": [
        "constant.language.ruby",
        "variable.language.self.ruby"
      ],
      "settings": {
        "foreground": "#bda0ea",
        "fontStyle": "italic"
      }
    }
  ]
}